<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= bundle.name %> - Humble Bundle Catalog</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>ðŸ“š</text></svg>">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .book-row {
            cursor: pointer;
            transition: background-color 0.2s;
        }
        .book-row:hover {
            background-color: rgba(0,0,0,0.05);
        }
        .book-details {
            display: none;
            background-color: #f8f9fa;
            padding: 1rem;
            border-radius: 0.25rem;
            margin: 0.5rem 0;
        }
        .expanded .book-details {
            display: block;
        }
        .arrow-icon {
            transition: transform 0.2s;
        }
        .expanded .arrow-icon {
            transform: rotate(90deg);
        }
        .format-badge {
            font-size: 0.8rem;
            margin-right: 0.3rem;
            text-transform: uppercase;
        }
        .sort-icon {
            cursor: pointer;
            user-select: none;
        }
        .sort-icon:hover {
            color: #0d6efd;
        }
        .book-size {
            font-size: 0.875rem;
            color: #6c757d;
        }
        .hidden {
            display: none !important;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container py-5">
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active"><%= bundle.name %></li>
            </ol>
        </nav>

        <% if (bundle.source === 'fanatical' && bundle.cover) { %>
            <div style="position: relative; height: 280px; background: url('<%= bundle.cover %>') center center / cover no-repeat; border-radius: 0.5rem; margin-bottom: 2rem;">
                <div style="position: absolute; inset: 0; background: rgba(0,0,0,0.55); border-radius: 0.5rem;"></div>
                <div style="position: absolute; left: 0; right: 0; bottom: 0; padding: 2rem; color: #fff; z-index: 2;">
                    <h1 class="display-5"><%= bundle.name %></h1>
                </div>
            </div>
        <% } %>
        <div class="card mb-4">
            <div class="card-body">
                <h1 class="card-title h2"><%= bundle.name %></h1>
                <div class="row mt-4">
                    <div class="col-md-6">
                        <p><strong>Bundle ID:</strong> <%= bundle.id %></p>
                        <p><strong>Purchase Date:</strong> <%= bundle.purchaseDate ? bundle.purchaseDate.toLocaleDateString() : 'N/A' %></p>
                        <p><strong>Number of Books:</strong> <%= bundle.numBooks %></p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Amount Spent:</strong> $<%= bundle.amountSpent ? bundle.amountSpent : 'N/A' %></p>
                        <p><strong>Game Key:</strong> <%= bundle.gamekey ? bundle.gamekey : 'N/A' %></p>
                        <p>
                            <strong>Status:</strong>
                            <% if (bundle.downloaded) { %>
                                <span class="badge bg-success">Downloaded</span>
                            <% } else { %>
                                <span class="badge bg-warning text-dark">Not Downloaded</span>
                            <% } %>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <% if (bundle.books && bundle.books.length > 0) { %>
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="card-title h4 mb-0">Books in Bundle</h2>
                        <span class="text-muted" id="bookCount"><%= bundle.books.length %> books</span>
                    </div>

                    <!-- Search and Sort Controls -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <input type="text" id="searchInput" class="form-control" placeholder="Search books...">
                        </div>
                        <div class="col-md-3">
                            <select id="sortSelect" class="form-select">
                                <option value="title">Sort by Title</option>
                                <option value="author">Sort by Author</option>
                                <option value="publisher">Sort by Publisher</option>
                                <option value="format">Sort by Format Count</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select id="filterSelect" class="form-select">
                                <option value="all">All File Types</option>
                                <option value="pdf">PDF</option>
                                <option value="epub">EPUB</option>
                                <option value="cbz">CBZ</option>
                                <option value="mobi">MOBI</option>
                                <option value="azw">AZW</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="list-group" id="booksList">
                        <% bundle.books.forEach((book, index) => { %>
                            <div class="list-group-item book-row"
                                 data-title="<%= book.title || '' %>"
                                 data-author="<%= Array.isArray(book.authors) ? book.authors[0] : (book.authors || '') %>"
                                 data-publisher="<%= book.publisher || '' %>"
                                 data-format-count="<%= Object.keys(book.formats).length %>"
                                 data-format_pdf="<%= book.formats && book.formats['pdf'] ? 'true' : 'false' %>"
                                 data-format_epub="<%= book.formats && book.formats['epub'] ? 'true' : 'false' %>"
                                 data-format_cbz="<%= book.formats && book.formats['cbz'] ? 'true' : 'false' %>"
                                 data-format_mobi="<%= book.formats && book.formats['mobi'] ? 'true' : 'false' %>"
                                 data-format_azw="<%= book.formats && book.formats['azw'] ? 'true' : 'false' %>"
                                 >
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <span class="arrow-icon me-2">â–¶</span>
                                        <strong><%= book.title %></strong>
                                        <% if (book.authors) { %>
                                            <span class="text-muted ms-2">by <%= Array.isArray(book.authors) ? book.authors.join(', ') : book.authors %></span>
                                        <% } %>
                                    </div>
                                    <div>
                                        <% if (book.formats) { %>
                                            <span class="book-size me-3"><%= Object.keys(book.formats).length %> formats</span>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="book-details">
                                    <% if (book.icon) { %>
                                        <div class="mb-3 text-center">
                                            <img src="<%= book.icon %>" alt="Book cover" style="max-height: 320px; max-width: 100%; border-radius: 0.5rem; box-shadow: 0 2px 16px rgba(0,0,0,0.12);">
                                        </div>
                                    <% } %>
                                    <div class="row">
                                        <% if (book.authors) { %>
                                            <div class="col-md-6">
                                                <p><strong>Author(s):</strong> <%= Array.isArray(book.authors) ? book.authors.join(', ') : book.authors %></p>
                                            </div>
                                        <% } %>
                                        <% if (book.publisher) { %>
                                            <div class="col-md-6">
                                                <p><strong>Publisher:</strong> <%= book.publisher %></p>
                                            </div>
                                        <% } %>
                                    </div>
                                    <% if (book.description) { %>
                                        <div class="mt-2">
                                            <strong>Description:</strong>
                                            <p class="mt-1"><%= book.description %></p>
                                        </div>
                                    <% } %>
                                    <% if (Object.keys(book.formats).length > 0) { %>
                                        <div class="mt-2">
                                            <strong>Available Formats &amp; Downloads:</strong>
                                            <div class="mt-2">
                                                <% Object.values(book.formats).forEach(format => { %>
                                                <div class="d-flex align-items-center mb-2">
                                                    <div style="width: 180px; flex-shrink: 0;">
                                                        <span class="badge bg-primary format-badge">
                                                            <% if (format.format && format.format.toLowerCase() === 'pdf') { %>
                                                                <i class="bi bi-file-earmark-pdf"></i>
                                                            <% } else if (format.format && format.format.toLowerCase() === 'epub') { %>
                                                                <i class="bi bi-book"></i>
                                                            <% } else if (format.format && format.format.toLowerCase() === 'cbz') { %>
                                                                <i class="bi bi-file-earmark-zip"></i>
                                                            <% } else { %>
                                                                <i class="bi bi-file-earmark"></i>
                                                            <% } %>
                                                            <%= format.format %>
                                                            <% if (format.size) { %>
                                                                (<%= format.size.toFixed(1) %> MB)
                                                            <% } %>
                                                        </span>
                                                    </div>
                                                    <div>
                                                        <% if (authEnabled && isAuthenticated && !isGuest) { %>
                                                            <% if (format.download_urls && (format.download_urls.web || format.download_urls.bittorrent)) { %>
                                                                <% if (format.download_urls.web) { %>
                                                                    <a href="<%= format.download_urls.web %>" target="_blank" rel="noopener noreferrer" class="btn btn-sm btn-outline-secondary me-1">Web</a>
                                                                <% } %>
                                                                <% if (format.download_urls.bittorrent) { %>
                                                                    <a href="<%= format.download_urls.bittorrent %>" target="_blank" rel="noopener noreferrer" class="btn btn-sm btn-outline-secondary">BitTorrent</a>
                                                                <% } %>
                                                            <% } %>
                                                        <% } %>
                                                    </div>
                                                </div>
                                                <% }) %>
                                            </div>
                                        </div>
                                    <% } %>
                                    <% if (book.isbn) { %>
                                        <div class="mt-2">
                                            <strong>ISBN:</strong> <%= book.isbn %>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="alert alert-info">
                No books found in this bundle.
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle book details
        function toggleBookDetails(element) {
            element.classList.toggle('expanded');
        }

        // Add click handlers to book rows
        document.querySelectorAll('.book-row').forEach(row => {
            row.addEventListener('click', () => toggleBookDetails(row));
        });

        // Search functionality
        const searchInput = document.getElementById('searchInput');
        const booksList = document.getElementById('booksList');
        const books = booksList.getElementsByClassName('book-row');
        const bookCount = document.getElementById('bookCount');

        function updateBookCount() {
            const visibleBooks = Array.from(books).filter(book => !book.classList.contains('hidden')).length;
            bookCount.textContent = `${visibleBooks} of ${books.length} books`;
        }

        function filterBooks() {
            const searchTerm = searchInput.value.toLowerCase();
            const filterValue = document.getElementById('filterSelect').value;
            Array.from(books).forEach(book => {
                const title = book.dataset.title.toLowerCase();
                const author = book.dataset.author.toLowerCase();
                const publisher = book.dataset.publisher.toLowerCase();
                // File type filter: check if the book has the selected format
                let matchesFileType = false;
                if (filterValue === 'all') {
                    matchesFileType = true;
                } else if (filterValue === 'other') {
                    // Show books that have formats, but none of the main types
                    const formats = Object.keys(book.dataset).filter(k => k.startsWith('format_') && book.dataset[k] === 'true');
                    matchesFileType = formats.length > 0 &&
                        !book.dataset.format_pdf &&
                        !book.dataset.format_epub &&
                        !book.dataset.format_cbz &&
                        !book.dataset.format_mobi &&
                        !book.dataset.format_azw;
                } else {
                    matchesFileType = book.dataset['format_' + filterValue] === 'true';
                }
                const matchesSearch = title.includes(searchTerm) || 
                                    author.includes(searchTerm) || 
                                    publisher.includes(searchTerm);
                book.classList.toggle('hidden', !matchesSearch || !matchesFileType);
            });
            updateBookCount();
        }

        // Sorting functionality
        function sortBooks(property) {
            const booksArray = Array.from(books);
            booksArray.sort((a, b) => {
                if (property === 'format-count') {
                    return parseInt(b.dataset[property]) - parseInt(a.dataset[property]);
                }
                return a.dataset[property].localeCompare(b.dataset[property]);
            });
            booksArray.forEach(book => booksList.appendChild(book));
        }

        // Event listeners
        searchInput.addEventListener('input', filterBooks);
        document.getElementById('filterSelect').addEventListener('change', filterBooks);
        document.getElementById('sortSelect').addEventListener('change', (e) => {
            sortBooks(e.target.value);
        });

        // Initialize book count
        updateBookCount();
    </script>
</body>
</html> 